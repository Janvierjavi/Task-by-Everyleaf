<div class="text-center rounded " style="width: 35rem; background-color:#F0F8FF;">

<h1>Labels</h1>

<table class="position-relative " style="width: 35rem;">
  <thead>
    <tr>
      <th>Tittle</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr class="border-bottom">
        <td><%= label.tittle %></td>
        <td><%= label.user.name %></td>
        <td><%= link_to 'Show', label, class:'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Edit', edit_label_path(label) %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path %>
