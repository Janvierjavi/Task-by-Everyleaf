
<% if logged_in? %>

<div class="card" style="width:400px; left:30rem;">
  <div class="card-body">
    <h4 class="card-title">Task</h4>
    <p>
      <strong>Name:</strong>
      <%= @task.name %>
    </p>
    <p>
      <strong>Details:</strong>
      <%= @task.details %>
    </p>
    <p>
      <strong>Arrive:</strong>
      <%= @task.arrive %>
    </p>
    <p>
      <strong>Status:</strong>
      <%= @task.status %>
    </p>
    <p>
      <strong>priority:</strong>
      <%= @task.priority %>
    </p>

    <%= link_to 'Update', edit_task_path(@task), class:'btn btn-primary' %>
    <%= link_to 'View Tasks', tasks_path, class:'btn btn-primary' %>

</div>

</div>
<% else %>
<div class="card bg-light m-2" style="width:400px; left:30rem; top:8rem;">
    <div class="card-body text-center">
      <p class="card-text">pls log in for get acess to this page   <%= link_to "Log in", new_session_path %></p>
    </div>
  </div>

<%end%>
