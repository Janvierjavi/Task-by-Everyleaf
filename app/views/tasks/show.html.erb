<div class="card" style="width:400px; left:30rem;">
  <div class="card-body">
    <h4 class="card-title">Task</h4>
    <p>
      <strong>Name:</strong>
      <%= @task.name %>
    </p>
    <p>
      <strong>Details:</strong>
      <%= @task.details %>
    </p>
    <p>
      <strong>Arrive:</strong>
      <%= @task.arrive %>
    </p>
    <p>
      <strong>Status:</strong>
      <%= @task.status %>
    </p>
    <p>
      <strong>priority:</strong>
      <%= @task.priority %>
    </p>

    <%= link_to 'Update', edit_task_path(@task), class:'btn btn-primary' %>
    <%= link_to 'View Tasks', tasks_path, class:'btn btn-primary' %>

</div>

</div>
