
<h1><%= t('view.tasks') %></h1>
<%= link_to 'New Task', new_task_path %>
<br>
<%= link_to 'sort by leave time', tasks_path(leave: "true")%>
    <% @tasks.each do |task| %>
      <p>  <b> Name: </b> <%= task.name %><br>
 <b> Details: </b><%= task.details %> <br>
  <b> Tokyo time:</b> <%= task.created_at %> <br>
  <b>Arrive time:</b> <%= task.arrive %> <br>
  <b>leave time:</b> <%= task.leave %> <br>
     <%= link_to 'Show', task %>
      <%= link_to 'Update', edit_task_path(task) %>
       <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
       <hr>
    
    <% end %>

